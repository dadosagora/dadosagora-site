{% extends "layout.njk" %}

{% block content %}
  <div class="bg-white shadow-lg rounded-lg p-8 text-center max-w-xl mx-auto">
    <h1 class="text-3xl font-bold mb-4">Conversor de Moedas</h1>
    <form id="converter" class="space-y-4">
      <div>
        <input type="number" step="any" id="valor" class="border rounded w-full p-2" placeholder="Digite o valor">
      </div>
      <div class="flex gap-4">
        <select id="de" class="w-1/2 border rounded p-2">
          <option value="USD">Dólar</option>
          <option value="BRL">Real</option>
          <option value="EUR">Euro</option>
        </select>
        <select id="para" class="w-1/2 border rounded p-2">
          <option value="BRL">Real</option>
          <option value="USD">Dólar</option>
          <option value="EUR">Euro</option>
        </select>
      </div>
      <button type="submit" class="bg-blue-900 text-white px-4 py-2 rounded">Converter</button>
    </form>
    <p id="resultado" class="mt-4 text-lg font-semibold"></p>
  </div>

  <script>
    document.getElementById('converter').addEventListener('submit', async function(e) {
      e.preventDefault();
      const valor = parseFloat(document.getElementById('valor').value);
      const de = document.getElementById('de').value;
      const para = document.getElementById('para').value;
      const resEl = document.getElementById('resultado');

      if (!valor || valor <= 0) {
        resEl.textContent = 'Digite um valor válido.';
        return;
      }

      try {
        const response = await fetch(`https://api.exchangerate.host/convert?from=${de}&to=${para}&amount=${valor}`);
        const data = await response.json();
        resEl.textContent = `${valor} ${de} = ${data.result.toFixed(2)} ${para}`;
      } catch (err) {
        resEl.textContent = 'Erro ao converter moedas.';
      }
    });
  </script>
{% endblock %}

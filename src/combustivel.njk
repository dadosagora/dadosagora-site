---
title: Conversor de Consumo de Combustível
layout: layout.njk
---

<h1 class="text-3xl sm:text-4xl font-extrabold text-center text-gray-900">Consumo de Combustível</h1>
<p class="text-center text-gray-600 mt-1">km/L, L/100km e mpg (US).</p>

<section class="mt-8">
  <label for="cAmount" class="block text-sm mb-1">Valor:</label>
  <input id="cAmount" type="number" step="0.0001" value="12" class="w-full p-3 border border-gray-300 rounded-lg bg-white"/>

  <div class="grid mt-3">
    <div>
      <label for="cFrom" class="block text-sm mb-1">De:</label>
      <select id="cFrom" class="w-full p-3 border border-gray-300 rounded-lg bg-white">
        <option value="kmL">km/L</option>
        <option value="L100">L/100 km</option>
        <option value="mpgUS">mpg (US)</option>
      </select>
    </div>
    <div>
      <label for="cTo" class="block text-sm mb-1">Para:</label>
      <select id="cTo" class="w-full p-3 border border-gray-300 rounded-lg bg-white">
        <option value="kmL">km/L</option>
        <option value="L100">L/100 km</option>
        <option value="mpgUS">mpg (US)</option>
      </select>
    </div>
  </div>

  <button id="cConvert" type="button" class="btn w-full mt-3">Converter</button>

  <p id="cResult" class="bigResult">—</p>
  <p id="cFormula"></p>
</section>

<script>
  const cFmt=(n)=>Number(n).toLocaleString("pt-BR",{maximumFractionDigits:4});

  function toL100(val, unit){
    if(unit==="kmL")  return 100/val;
    if(unit==="mpgUS")return 235.215/val; // 1 mpg ≈ 235.215 L/100km
    return val; // L/100
  }
  function fromL100(l100, unit){
    if(unit==="kmL")  return 100/l100;
    if(unit==="mpgUS")return 235.215/l100;
    return l100;
  }

  cConvert.addEventListener("click", ()=>{
    const val   = parseFloat(cAmount.value||0);
    const l100  = toL100(val, cFrom.value);
    const out   = fromL100(l100, cTo.value);
    cResult.textContent = `${cFmt(out)} ${cTo.value}`;
    cFormula.innerHTML  = `<strong>Fórmula:</strong> via L/100 km (padrão)`;
  });
</script>

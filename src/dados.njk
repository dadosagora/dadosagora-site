---
title: Conversor de Dados Digitais
layout: layout.njk
---

<h1 class="text-3xl sm:text-4xl font-extrabold text-center text-gray-900">Dados Digitais</h1>
<p class="text-center text-gray-600 mt-1">Sistema binário (KiB, MiB, GiB…).</p>

<section class="mt-8">
  <label for="bAmount" class="block text-sm mb-1">Valor:</label>
  <input id="bAmount" type="number" step="0.0001" value="1" class="w-full p-3 border border-gray-300 rounded-lg bg-white"/>

  <div class="grid mt-3">
    <div>
      <label for="bFrom" class="block text-sm mb-1">De:</label>
      <select id="bFrom" class="w-full p-3 border border-gray-300 rounded-lg bg-white">
        <option value="B">Byte (B)</option>
        <option value="KiB">Kibibyte (KiB)</option>
        <option value="MiB">Mebibyte (MiB)</option>
        <option value="GiB">Gibibyte (GiB)</option>
        <option value="TiB">Tebibyte (TiB)</option>
      </select>
    </div>
    <div>
      <label for="bTo" class="block text-sm mb-1">Para:</label>
      <select id="bTo" class="w-full p-3 border border-gray-300 rounded-lg bg-white">
        <option value="B">Byte (B)</option>
        <option value="KiB">Kibibyte (KiB)</option>
        <option value="MiB">Mebibyte (MiB)</option>
        <option value="GiB">Gibibyte (GiB)</option>
        <option value="TiB">Tebibyte (TiB)</option>
      </select>
    </div>
  </div>

  <button id="bConvert" type="button" class="btn w-full mt-3">Converter</button>

  <p id="bResult" class="bigResult">—</p>
  <p id="bFormula"></p>
</section>

<script>
  const bFmt=(n)=>Number(n).toLocaleString("pt-BR",{maximumFractionDigits:6});
  const K=1024;
  // fatores para Byte (binário)
  const B = { B:1, KiB:K, MiB:K**2, GiB:K**3, TiB:K**4 };

  bConvert.addEventListener("click", ()=>{
    const val = parseFloat(bAmount.value||0);
    const bytes = val * B[bFrom.value];
    const out = bytes / B[bTo.value];
    bResult.textContent = `${bFmt(out)} ${bTo.value}`;
    bFormula.innerHTML  = `<strong>Base:</strong> binária (1 KiB = 1024 B).`;
  });
</script>

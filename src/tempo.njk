---
title: Conversor de Tempo
layout: layout.njk
---

<h1 class="text-3xl sm:text-4xl font-extrabold text-center text-gray-900">
  Conversor de Tempo
</h1>
<p class="text-center text-gray-600 mt-1">Segundos, minutos, horas e dias.</p>

<section class="mt-8">
  <label for="timeAmount" class="block text-sm mb-1">Valor:</label>
  <input id="timeAmount" type="number" step="0.0001" value="60" class="w-full p-3 border border-gray-300 rounded-lg bg-white" />

  <div class="grid mt-3">
    <div>
      <label for="timeFrom" class="block text-sm mb-1">De:</label>
      <select id="timeFrom" class="w-full p-3 border border-gray-300 rounded-lg bg-white">
        <option value="s">Segundo (s)</option>
        <option value="min">Minuto (min)</option>
        <option value="h">Hora (h)</option>
        <option value="d">Dia (d)</option>
      </select>
    </div>
    <div>
      <label for="timeTo" class="block text-sm mb-1">Para:</label>
      <select id="timeTo" class="w-full p-3 border border-gray-300 rounded-lg bg-white">
        <option value="s">Segundo (s)</option>
        <option value="min">Minuto (min)</option>
        <option value="h">Hora (h)</option>
        <option value="d">Dia (d)</option>
      </select>
    </div>
  </div>

  <div class="mt-3">
    <button id="timeConvert" type="button" class="btn w-full">Converter</button>
  </div>

  <p id="timeResult" class="bigResult">—</p>
  <p id="timeFormula"></p>
</section>

<script>
  const timeFmt = (n) => Number(n).toLocaleString("pt-BR", {maximumFractionDigits: 6});
  // fatores para segundos
  const tFactor = { s:1, min:60, h:3600, d:86400 };

  document.getElementById("timeConvert").addEventListener("click", () => {
    const amount = parseFloat(document.getElementById("timeAmount").value || 0);
    const from = document.getElementById("timeFrom").value;
    const to   = document.getElementById("timeTo").value;

    const seconds = amount * tFactor[from];
    const out = seconds / tFactor[to];

    document.getElementById("timeResult").textContent = timeFmt(out) + " " + to;
    document.getElementById("timeFormula").innerHTML =
      `<strong>Fórmula:</strong> ${amount} ${from} × ${tFactor[from]} (s/${from}) ÷ ${tFactor[to]} (s/${to})`;
  });
</script>

title: Conversor de Área
layout: layout.njk
---

<h1 class="text-3xl sm:text-4xl font-extrabold text-center text-gray-900">Conversor de Área</h1>
<p class="text-center text-gray-600 mt-1">m², km², hectares, acres e pés².</p>

<section class="mt-8">
  <label for="aAmount" class="block text-sm mb-1">Valor:</label>
  <input id="aAmount" type="number" step="0.0001" value="1" class="w-full p-3 border border-gray-300 rounded-lg bg-white"/>

  <div class="grid mt-3">
    <div>
      <label class="block text-sm mb-1" for="aFrom">De:</label>
      <select id="aFrom" class="w-full p-3 border border-gray-300 rounded-lg bg-white">
        <option value="m2">Metro quadrado (m²)</option>
        <option value="km2">Quilômetro quadrado (km²)</option>
        <option value="ha">Hectare (ha)</option>
        <option value="acre">Acre (acre)</option>
        <option value="ft2">Pé quadrado (ft²)</option>
      </select>
    </div>
    <div>
      <label class="block text-sm mb-1" for="aTo">Para:</label>
      <select id="aTo" class="w-full p-3 border border-gray-300 rounded-lg bg-white">
        <option value="m2">Metro quadrado (m²)</option>
        <option value="km2">Quilômetro quadrado (km²)</option>
        <option value="ha">Hectare (ha)</option>
        <option value="acre">Acre (acre)</option>
        <option value="ft2">Pé quadrado (ft²)</option>
      </select>
    </div>
  </div>

  <button id="aConvert" type="button" class="btn w-full mt-3">Converter</button>

  <p id="aResult" class="bigResult">—</p>
  <p id="aFormula"></p>
</section>

<script>
  const aFmt = (n)=>Number(n).toLocaleString("pt-BR",{maximumFractionDigits:6});
  // fatores para m²
  const A = { m2:1, km2:1e6, ha:10000, acre:4046.8564224, ft2:0.09290304 };

  document.getElementById("aConvert").addEventListener("click", ()=>{
    const val = parseFloat(aAmount.value||0);
    const m2  = val * A[aFrom.value];
    const out = m2 / A[aTo.value];
    aResult.textContent = `${aFmt(out)} ${aTo.value}`;
    aFormula.innerHTML = `<strong>Fórmula:</strong> ${val}×${A[aFrom.value]} (m²/${aFrom.value}) ÷ ${A[aTo.value]} (m²/${aTo.value})`;
  });
</script>

title: Conversor de Distância
layout: layout.njk
---

<h1 class="text-3xl sm:text-4xl font-extrabold text-center text-gray-900">
  Conversor de Distância
</h1>
<p class="text-center text-gray-600 mt-1">Metros, quilômetros, milhas e pés.</p>

<section class="mt-8">
  <label for="dAmount" class="block text-sm mb-1">Valor:</label>
  <input id="dAmount" type="number" step="0.0001" value="1" class="w-full p-3 border border-gray-300 rounded-lg bg-white" />

  <div class="grid mt-3">
    <div>
      <label for="dFrom" class="block text-sm mb-1">De:</label>
      <select id="dFrom" class="w-full p-3 border border-gray-300 rounded-lg bg-white">
        <option value="m">Metro (m)</option>
        <option value="km">Quilômetro (km)</option>
        <option value="mi">Milha (mi)</option>
        <option value="ft">Pé (ft)</option>
      </select>
    </div>
    <div>
      <label for="dTo" class="block text-sm mb-1">Para:</label>
      <select id="dTo" class="w-full p-3 border border-gray-300 rounded-lg bg-white">
        <option value="m">Metro (m)</option>
        <option value="km">Quilômetro (km)</option>
        <option value="mi">Milha (mi)</option>
        <option value="ft">Pé (ft)</option>
      </select>
    </div>
  </div>

  <div class="mt-3">
    <button id="dConvert" type="button" class="btn w-full">Converter</button>
  </div>

  <p id="dResult" class="bigResult">—</p>
  <p id="dFormula"></p>
</section>

<script>
  const dFmt = (n) => Number(n).toLocaleString("pt-BR", {maximumFractionDigits: 6});
  // fatores para metros
  const dFactor = { m:1, km:1000, mi:1609.344, ft:0.3048 };

  document.getElementById("dConvert").addEventListener("click", () => {
    const amount = parseFloat(document.getElementById("dAmount").value || 0);
    const from = document.getElementById("dFrom").value;
    const to   = document.getElementById("dTo").value;

    const meters = amount * dFactor[from];
    const out = meters / dFactor[to];

    document.getElementById("dResult").textContent = dFmt(out) + " " + to;
    document.getElementById("dFormula").innerHTML =
      `<strong>Fórmula:</strong> ${amount} ${from} × ${dFactor[from]} (m/${from}) ÷ ${dFactor[to]} (m/${to})`;
  });
</script>

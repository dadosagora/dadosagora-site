---
title: Conversor de Peso
layout: layout.njk
---

<h1 class="text-3xl sm:text-4xl font-extrabold text-center text-gray-900">
  Conversor de Peso
</h1>
<p class="text-center text-gray-600 mt-1">Quilos, gramas, libras e onças.</p>

<section class="mt-8">
  <label for="pAmount" class="block text-sm mb-1">Valor:</label>
  <input id="pAmount" type="number" step="0.0001" value="1" class="w-full p-3 border border-gray-300 rounded-lg bg-white" />

  <div class="grid mt-3">
    <div>
      <label for="pFrom" class="block text-sm mb-1">De:</label>
      <select id="pFrom" class="w-full p-3 border border-gray-300 rounded-lg bg-white">
        <option value="kg">Quilo (kg)</option>
        <option value="g">Grama (g)</option>
        <option value="lb">Libra (lb)</option>
        <option value="oz">Onça (oz)</option>
      </select>
    </div>
    <div>
      <label for="pTo" class="block text-sm mb-1">Para:</label>
      <select id="pTo" class="w-full p-3 border border-gray-300 rounded-lg bg-white">
        <option value="kg">Quilo (kg)</option>
        <option value="g">Grama (g)</option>
        <option value="lb">Libra (lb)</option>
        <option value="oz">Onça (oz)</option>
      </select>
    </div>
  </div>

  <div class="mt-3">
    <button id="pConvert" type="button" class="btn w-full">Converter</button>
  </div>

  <p id="pResult" class="bigResult">—</p>
  <p id="pFormula"></p>
</section>

<script>
  const pFmt = (n) => Number(n).toLocaleString("pt-BR", {maximumFractionDigits: 6});
  // fatores para kg
  const pFactor = { kg:1, g:0.001, lb:0.45359237, oz:0.028349523125 };

  document.getElementById("pConvert").addEventListener("click", () => {
    const amount = parseFloat(document.getElementById("pAmount").value || 0);
    const from = document.getElementById("pFrom").value;
    const to   = document.getElementById("pTo").value;

    const kg = amount * pFactor[from];
    const out = kg / pFactor[to];

    document.getElementById("pResult").textContent = pFmt(out) + " " + to;
    document.getElementById("pFormula").innerHTML =
      `<strong>Fórmula:</strong> ${amount} ${from} × ${pFactor[from]} (kg/${from}) ÷ ${pFactor[to]} (kg/${to})`;
  });
</script>

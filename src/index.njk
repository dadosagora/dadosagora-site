<script>
  // Dados carregados pelo Eleventy via _data/rates.js
  const ratesBRL = {{ rates | dump | safe }};

  // Formata√ß√£o num√©rica padr√£o pt-BR
  const fmt = (n, digits = 2) => Number(n).toLocaleString("pt-BR", {
    minimumFractionDigits: digits,
    maximumFractionDigits: digits
  });

  // Tabela de s√≠mbolos
  function symbol(code){
    const map = {
      BRL:"R$", USDBRL:"US$", EURBRL:"‚Ç¨", ARSBRL:"ARS$",
      GBPBRL:"¬£",  CADBRL:"C$",  AUDBRL:"A$",  CHFBRL:"CHF",
      JPYBRL:"¬•",  BTCBRL:"‚Çø"
    };
    return map[code] || "";
  }

  // Converte um c√≥digo para taxa BRL (1 quando √© BRL)
  function toBRL(code){
    return code === "BRL" ? 1 : Number(ratesBRL[code] ?? 0);
  }

  // Preenche a lista "Cota√ß√µes agora" sem usar filtro Nunjucks
  function renderSpotRates(){
    document.querySelectorAll('#rates-list .value').forEach(span => {
      const code = span.getAttribute('data-code');
      const decimals = Number(span.getAttribute('data-decimals') || 2);
      const val = toBRL(code);
      span.textContent = val ? fmt(val, decimals) : '‚Äî';
    });
  }

  // Conversor
  document.getElementById("convert").onclick = () => {
    const amount = parseFloat(document.getElementById("amount").value || 0);
    const src    = document.getElementById("from").value;
    const dst    = document.getElementById("to").value;

    const srcRate = toBRL(src);
    const dstRate = toBRL(dst);

    const brl   = amount * srcRate;
    const final = dst === "BRL" ? brl : (dstRate ? brl / dstRate : 0);

    const resultadoFinal = `${symbol(dst)} ${fmt(final, dst === "BTCBRL" ? 6 : 2)}`;
    document.getElementById("result").textContent = resultadoFinal;

    const conta =
      `${symbol(src)} ${fmt(amount)} √ó ${fmt(srcRate)}` +
      (dst !== "BRL" ? ` √∑ ${fmt(dstRate)}` : "") +
      ` = ${resultadoFinal}`;

    document.getElementById("formula").innerHTML =
      `<strong>F√≥rmula:</strong> ${conta}`;

    // üëá ENVIA PARA A PLANILHA (modo no-cors)
    fetch("https://script.google.com/macros/s/AKfycbxvwWDoKH-9UrdA4cQTyxJAfOl9eTT8UOKLv2UCIdPyHKbf-QPSCe5XfrABcFH5cHU/exec", {
      method: "POST",
      mode: "no-cors",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({
        pagina: "moedas",
        resultado: resultadoFinal
      })
    });
  };

  // Inicializa as cota√ß√µes vis√≠veis
  renderSpotRates();
</script>

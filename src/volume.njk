title: Conversor de Volume
layout: layout.njk
---

<h1 class="text-3xl sm:text-4xl font-extrabold text-center text-gray-900">
  Conversor de Volume
</h1>
<p class="text-center text-gray-600 mt-1">Litros, mililitros, galões (US) e metros cúbicos.</p>

<section class="mt-8">
  <label for="vAmount" class="block text-sm mb-1">Valor:</label>
  <input id="vAmount" type="number" step="0.0001" value="1" class="w-full p-3 border border-gray-300 rounded-lg bg-white" />

  <div class="grid mt-3">
    <div>
      <label for="vFrom" class="block text-sm mb-1">De:</label>
      <select id="vFrom" class="w-full p-3 border border-gray-300 rounded-lg bg-white">
        <option value="L">Litro (L)</option>
        <option value="mL">Mililitro (mL)</option>
        <option value="galUS">Galão (US)</option>
        <option value="m3">Metro cúbico (m³)</option>
      </select>
    </div>
    <div>
      <label for="vTo" class="block text-sm mb-1">Para:</label>
      <select id="vTo" class="w-full p-3 border border-gray-300 rounded-lg bg-white">
        <option value="L">Litro (L)</option>
        <option value="mL">Mililitro (mL)</option>
        <option value="galUS">Galão (US)</option>
        <option value="m3">Metro cúbico (m³)</option>
      </select>
    </div>
  </div>

  <div class="mt-3">
    <button id="vConvert" type="button" class="btn w-full">Converter</button>
  </div>

  <p id="vResult" class="bigResult">—</p>
  <p id="vFormula"></p>
</section>

<script>
  const vFmt = (n) => Number(n).toLocaleString("pt-BR", {maximumFractionDigits: 6});
  // fatores para litros
  const vFactor = { L:1, mL:0.001, galUS:3.785411784, m3:1000 };

  document.getElementById("vConvert").addEventListener("click", () => {
    const amount = parseFloat(document.getElementById("vAmount").value || 0);
    const from = document.getElementById("vFrom").value;
    const to   = document.getElementById("vTo").value;

    const liters = amount * vFactor[from];
    const out = liters / vFactor[to];

    document.getElementById("vResult").textContent = vFmt(out) + " " + to;
    document.getElementById("vFormula").innerHTML =
      `<strong>Fórmula:</strong> ${amount} ${from} × ${vFactor[from]} (L/${from}) ÷ ${vFactor[to]} (L/${to})`;
  });
</script>

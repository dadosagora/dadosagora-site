{# src/_includes/layout.njk #}
<!DOCTYPE html>
<html lang="pt-BR">
<head>
  {# –– SEO básico –– #}
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Converta moedas, temperaturas, distâncias e muito mais de forma rápida e gratuita.">
  <meta name="author"    content="ConvertePraMim">
  <meta name="robots"    content="index,follow">

  {# –– Open Graph –– #}
  <meta property="og:title"       content="ConvertePraMim – Conversores online gratuitos">
  <meta property="og:description" content="Conversores práticos de moedas, temperatura, distância, peso, volume e mais.">
  <meta property="og:image"       content="/assets/og-image.png">
  <meta property="og:url"         content="https://convertepramim.com.br">
  <meta property="og:type"        content="website">

  {# –– Twitter Card –– #}
  <meta name="twitter:card"        content="summary_large_image">
  <meta name="twitter:title"       content="ConvertePraMim – Conversores online gratuitos">
  <meta name="twitter:description" content="Converta tudo o que precisa em um só lugar.">
  <meta name="twitter:image"       content="/assets/og-image.png">

  {# –– Estilos –– #}
  <link rel="stylesheet" href="https://unpkg.com/@picocss/pico@latest/css/pico.min.css">
  <link rel="stylesheet" href="/styles.css">

  {# –– Título dinâmico –– #}
  <title>{% if title %}{{ title }} | {% endif %}ConvertePraMim</title>
</head>
<body class="container">

  {# –– Cabeçalho & menu –– #}
  <header>
    <h1 style="margin-bottom:0.5rem"><a href="/" style="text-decoration:none">ConvertePraMim</a></h1>

    <nav>
      <ul class="menu">
        <li><a href="/">Moedas</a></li>
        <li><a href="/temperatura/">Temperatura</a></li>
        <li><a href="/distancia/">Distância</a></li>
        <li><a href="/peso/">Peso</a></li>
        <li><a href="/volume/">Volume</a></li>
        <li><a href="/tempo/">Tempo</a></li>
      </ul>
    </nav>
  </header>

  {# –– Conteúdo injectado pelas páginas –– #}
  <main>
    {% block content %}{% endblock %}
  </main>

  <footer style="margin-top:3rem">
    <p>&copy; {{ "now" | date("yyyy") }} ConvertePraMim</p>
  </footer>

</body>
</html>
